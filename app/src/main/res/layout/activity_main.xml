    <com.smarteist.autoimageslider.SliderView
        android:id="@+id/slider"
        android:layout_marginHorizontal="24dp"
        app:layout_constraintTop_toBottomOf="@id/appBarLayout"
        app:layout_constraintBottom_toTopOf="@id/rv_story"
        android:layout_width="match_parent"
        android:layout_height="150dp"
        android:layout_centerInParent="true"
        app:sliderAnimationDuration="600"
        app:sliderAutoCycleDirection="right"
        app:sliderIndicatorAnimationDuration="600"
        app:sliderIndicatorEnabled="true"
        app:sliderIndicatorGravity="center_horizontal|bottom"
        app:sliderIndicatorMargin="15dp"
        app:sliderIndicatorOrientation="horizontal"
        app:sliderIndicatorPadding="3dp"
        app:sliderIndicatorRadius="2dp"
        app:sliderIndicatorSelectedColor="#DF2E38"
        app:sliderIndicatorUnselectedColor="#FFF"
        app:sliderIndicatorMarginTop="100dp"
        app:sliderScrollTimeInSec="1" />



    <androidx.recyclerview.widget.RecyclerView
        android:id="@+id/rv_story"
        android:layout_width="0dp"
        android:layout_height="0dp"
        app:layout_constraintBottom_toBottomOf="parent"
        app:layout_constraintEnd_toEndOf="parent"
        app:layout_constraintHorizontal_bias="1.0"
        app:layout_constraintStart_toStartOf="parent"
        app:layout_constraintTop_toBottomOf="@+id/slider"
        app:layout_constraintBottom_toTopOf="@id/bottomNavigationView2"
        app:layout_constraintVertical_bias="0.0"
        tools:listitem="@layout/item_row_post" />

    <androidx.constraintlayout.widget.ConstraintLayout
        android:id="@+id/bottomNavigationView2"
        android:layout_width="match_parent"
        android:layout_height="56dp"
        android:background="@color/white"
        app:layout_constraintBottom_toBottomOf="parent"
        >
        <ImageButton
            android:id="@+id/action_home"
            android:layout_width="56dp"
            android:layout_height="56dp"
            android:padding="12dp"
            android:layout_marginStart="12dp"
            app:layout_constraintStart_toStartOf="parent"
            app:layout_constraintTop_toTopOf="@id/bottomNavigationView2"
            app:layout_constraintBottom_toBottomOf="@id/bottomNavigationView2"
            android:background="@null"
            android:scaleType="fitCenter"
            android:src="@drawable/ic_home"
            app:tint="?attr/colorPrimary" />

        <ImageButton
            android:id="@+id/action_community"
            android:layout_width="56dp"
            android:layout_height="56dp"
            android:padding="12dp"
            app:layout_constraintStart_toEndOf="@id/action_home"
            app:layout_constraintEnd_toStartOf="@id/action_scan"
            app:layout_constraintTop_toTopOf="@id/bottomNavigationView2"
            app:layout_constraintBottom_toBottomOf="@id/bottomNavigationView2"
            android:background="@null"
            android:scaleType="fitCenter"
            android:src="@drawable/ic_community"
            app:tint="@color/black" />

        <ImageButton
            android:id="@+id/action_scan"
            android:layout_width="56dp"
            android:layout_height="56dp"
            android:padding="12dp"
            app:layout_constraintStart_toStartOf="parent"
            app:layout_constraintEnd_toEndOf="parent"
            app:layout_constraintTop_toTopOf="@id/bottomNavigationView2"
            app:layout_constraintBottom_toBottomOf="@id/bottomNavigationView2"
            android:layout_marginHorizontal="90dp"
            android:background="@null"
            android:scaleType="fitCenter"
            android:src="@drawable/ic_camera_lens"
            app:tint="@color/black" />

        <ImageButton
            android:id="@+id/action_recipe"
            android:layout_width="56dp"
            android:layout_height="56dp"
            android:padding="12dp"
            app:layout_constraintStart_toEndOf="@id/action_scan"
            app:layout_constraintEnd_toStartOf="@id/action_nutritionist"
            app:layout_constraintTop_toTopOf="@id/bottomNavigationView2"
            app:layout_constraintBottom_toBottomOf="@id/bottomNavigationView2"
            android:background="@null"
            android:scaleType="fitCenter"
            android:src="@drawable/ic_recipe"
            app:tint="@color/black" />

            <ImageButton
                android:layout_width="50dp"
                android:layout_height="50dp"
                android:background="@null"
                android:scaleType="fitCenter"
                android:src="@drawable/ic_user"
                app:tint="@color/white" />

        <ImageButton
            android:id="@+id/action_nutritionist"
            android:layout_width="56dp"
            android:layout_height="56dp"
            android:padding="12dp"
            android:layout_marginEnd="12dp"
            android:background="@null"
            app:layout_constraintEnd_toEndOf="parent"
            app:layout_constraintTop_toTopOf="@id/bottomNavigationView2"
            app:layout_constraintBottom_toBottomOf="@id/bottomNavigationView2"
            android:scaleType="fitCenter"
            android:src="@drawable/ic_nutritionist"
            app:tint="@color/black" />
    </androidx.constraintlayout.widget.ConstraintLayout>

