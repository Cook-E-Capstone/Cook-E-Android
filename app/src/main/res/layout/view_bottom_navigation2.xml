<?xml version="1.0" encoding="utf-8"?>
<androidx.constraintlayout.widget.ConstraintLayout xmlns:android="http://schemas.android.com/apk/res/android"
    android:layout_width="match_parent"
    android:layout_height="56dp"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    android:background="@color/white"
    android:id="@+id/bottomNavigationView2"
    >

        <ImageButton
            android:id="@+id/action_home"
            android:layout_width="56dp"
            android:layout_height="56dp"
            android:padding="12dp"
            android:layout_marginStart="12dp"
            app:layout_constraintStart_toStartOf="parent"
            app:layout_constraintTop_toTopOf="parent"
            app:layout_constraintBottom_toBottomOf="parent"
            android:background="@null"
            android:foreground="?android:attr/selectableItemBackgroundBorderless"
            android:scaleType="fitCenter"
            android:src="@drawable/ic_home"
            app:tint="@color/black"
            android:contentDescription="home button" />

        <ImageButton
            android:id="@+id/action_community"
            android:layout_width="56dp"
            android:layout_height="56dp"
            android:padding="12dp"
            app:layout_constraintStart_toEndOf="@id/action_home"
            app:layout_constraintEnd_toStartOf="@id/action_scan"
            app:layout_constraintTop_toTopOf="parent"
            app:layout_constraintBottom_toBottomOf="parent"
            android:background="@null"
            android:foreground="?android:attr/selectableItemBackgroundBorderless"
            android:scaleType="fitCenter"
            android:src="@drawable/ic_community"
            app:tint="@color/black"
            android:contentDescription="community button" />

        <ImageButton
            android:id="@+id/action_scan"
            android:layout_width="56dp"
            android:layout_height="56dp"
            android:padding="12dp"
            app:layout_constraintStart_toStartOf="parent"
            app:layout_constraintEnd_toEndOf="parent"
            app:layout_constraintTop_toTopOf="parent"
            app:layout_constraintBottom_toBottomOf="parent"
            android:layout_marginHorizontal="90dp"
            android:background="@null"
            android:foreground="?android:attr/selectableItemBackgroundBorderless"
            android:scaleType="fitCenter"
            android:src="@drawable/ic_camera_lens"
            app:tint="@color/black"
            android:contentDescription="scan button" />

        <ImageButton
            android:id="@+id/action_recipe"
            android:layout_width="56dp"
            android:layout_height="56dp"
            android:padding="12dp"
            app:layout_constraintStart_toEndOf="@id/action_scan"
            app:layout_constraintEnd_toStartOf="@id/action_nutritionist"
            app:layout_constraintTop_toTopOf="parent"
            app:layout_constraintBottom_toBottomOf="parent"
            android:background="@null"
            android:foreground="?android:attr/selectableItemBackgroundBorderless"
            android:scaleType="fitCenter"
            android:src="@drawable/ic_recipe"
            app:tint="@color/black"
            android:contentDescription="recipe button" />

        <ImageButton
            android:id="@+id/action_nutritionist"
            android:layout_width="56dp"
            android:layout_height="56dp"
            android:padding="12dp"
            android:layout_marginEnd="12dp"
            android:background="@null"
            android:foreground="?android:attr/selectableItemBackgroundBorderless"
            app:layout_constraintEnd_toEndOf="parent"
            app:layout_constraintTop_toTopOf="parent"
            app:layout_constraintBottom_toBottomOf="parent"
            android:scaleType="fitCenter"
            android:src="@drawable/ic_nutritionist"
            app:tint="@color/black"
            android:contentDescription="nutritionist button" />
</androidx.constraintlayout.widget.ConstraintLayout>