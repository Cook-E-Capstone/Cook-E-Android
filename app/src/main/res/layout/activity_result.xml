    <ImageView
        android:id="@+id/iv_back"
        android:layout_width="56dp"
        android:layout_height="56dp"

        android:padding="16dp"
        app:layout_constraintTop_toTopOf="parent"
        app:layout_constraintStart_toStartOf="parent"
        app:srcCompat="@drawable/ic_back"
        app:tint="@color/black"
        android:elevation="2dp"
        />

    <ImageView
        android:id="@+id/iv_result_image"
        android:layout_width="0dp"
        android:layout_height="0dp"
        android:scaleType="centerCrop"
        app:layout_constraintDimensionRatio="1:1"
        app:layout_constraintEnd_toEndOf="parent"
        app:layout_constraintStart_toStartOf="parent"
        app:layout_constraintTop_toTopOf="parent"
        tools:src="@tools:sample/backgrounds/scenic" />

    <TextView
        android:id="@+id/tv_name"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:textSize="30sp"
        android:fontFamily="@font/inter_bold"
        app:layout_constraintBottom_toBottomOf="@id/iv_result_image"
        app:layout_constraintStart_toStartOf="parent"
        app:layout_constraintEnd_toEndOf="parent"
        tools:text="toolsText"
        android:textColor="?attr/colorPrimary"
        />

    <HorizontalScrollView
        android:id="@+id/sv_nutrition"
        android:layout_width="match_parent"
        android:layout_height="100dp"
        app:layout_constraintEnd_toEndOf="parent"
        app:layout_constraintStart_toStartOf="parent"
        app:layout_constraintTop_toBottomOf="@+id/iv_result_image"
        android:scrollbars="none"
        >

        <LinearLayout
            android:layout_width="wrap_content"
            android:layout_height="match_parent"
            android:orientation="horizontal">

            <TextView
                android:id="@+id/tv_kalori"
                android:layout_width="100dp"
                android:layout_height="match_parent"
                android:text="Calories" />

            <TextView
                android:id="@+id/tv_lemak"
                android:layout_width="100dp"
                android:layout_height="match_parent"
                android:text="Lemak" />

            <TextView
                android:id="@+id/tv_sodium"
                android:layout_width="100dp"
                android:layout_height="match_parent"
                android:text="Sodium" />

            <TextView
                android:id="@+id/tv_potasium"
                android:layout_width="100dp"
                android:layout_height="match_parent"
                android:text="Potasium" />

            <TextView
                android:id="@+id/tv_serat"
                android:layout_width="100dp"
                android:layout_height="match_parent"
                android:text="Serat" />
        </LinearLayout>
    </HorizontalScrollView>

    <TextView
        android:id="@+id/header_desc"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:text="Description"
        android:fontFamily="@font/inter_bold"
        android:textColor="?attr/colorPrimary"
        app:layout_constraintStart_toStartOf="parent"
        app:layout_constraintTop_toBottomOf="@id/sv_nutrition" />

    <TextView
        android:id="@+id/tv_desc"
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:fontFamily="@font/inter"
        android:textSize="12sp"
        app:layout_constraintTop_toBottomOf="@id/header_desc"
        tools:text="Lorem ipsum dolor sit amet, consectetur adipiscing elit, sed do eiusmod tempor incididunt ut labore et dolore magna aliqua. Commodo odio aenean sed adipiscing. Proin nibh nisl condimentum id venenatis a condimentum. Magna ac placerat vestibulum lectus mauris. Placerat vestibulum lectus mauris ultrices eros in. Amet dictum sit amet justo donec enim diam vulputate. Amet consectetur adipiscing elit ut aliquam purus sit. Velit sed ullamcorper morbi tincidunt ornare massa eget egestas purus. Commodo viverra maecenas accumsan lacus vel facilisis volutpat est velit. Magna etiam." />



</androidx.constraintlayout.widget.ConstraintLayout>